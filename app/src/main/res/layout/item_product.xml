<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:orientation="horizontal"
    android:padding="@dimen/margin_large">

    <ImageView
        android:id="@+id/itemProductImage"
        android:layout_width="@dimen/product_image_size"
        android:layout_height="@dimen/product_image_size"
        android:layout_gravity="center"
        android:contentDescription="@string/product_image"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_menu"
        tools:tint="?colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_product_image_text"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemProductTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.App.Title"
            tools:text="Ветчина и грибы" />

        <TextView
            android:id="@+id/itemProductDescription"
            android:layout_width="match_parent"
            android:layout_height="@dimen/product_description_height"
            android:layout_marginTop="@dimen/margin_small"
            android:ellipsize="end"
            android:maxLines="4"
            android:textAppearance="@style/TextAppearance.App.Regular"
            tools:text="Ветчина,шампиньоны, увеличинная порция моцареллы, томатный соус" />

        <TextView
            android:id="@+id/itemProductBuyButton"
            android:layout_width="@dimen/buy_button_width"
            android:layout_height="@dimen/buy_button_height"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin_small"
            android:background="?selectableItemBackground"
            android:foreground="@drawable/ic_button"
            android:foregroundTint="?colorPrimary"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.App.Button"
            tools:text="от 345 р" />


    </LinearLayout>

</LinearLayout>